{
  "name": "Web Extension for Shaarli",
  "description": "",
  "version": "0.0.1",
  "homepage_url": "https://github.com/",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "background": {
    "scripts": ["storage.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-24.png",
    "default_title": "Share your link !"
  }
}
